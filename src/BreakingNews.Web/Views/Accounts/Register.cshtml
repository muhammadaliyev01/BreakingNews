@using BreakingNews.Service.Dtos.Accounts;
@model AccountRegisterDto
@{
    Layout = "_AccountsLayout.cshtml";
}
<div style="background-color:  blue;height: 485px; width: 25%; text-align: center; margin-top: 80px; margin-left: 550px; margin-bottom: 50px; margin-right: 50px; border-radius: 10px;">
    <h1 style="text-align: center;">Register</h1>
    <form>
        <div style="margin-top: 5px; margin-left: 40px; margin-right: 500px; margin-bottom: 15px;">
            <label style="margin-right: 160px;">FirstName</label>
            <input type="text" asp-for="FirstName" style="background-color: black; color: blue; height: 30px; width: 300px; margin-top: 15px;" placeholder="FirstName" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div style="margin-top: 5px; margin-left: 40px; margin-right: 500px; margin-bottom: 15px;">
            <label style="margin-right: 200px;">LastName</label>
            <input type="text" asp-for="LastName" style="background-color: black; color: blue; height: 30px; width: 300px; margin-top: 15px;"
                   placeholder="LastName " />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div style="margin-top: 5px; margin-left: 40px; margin-right: 500px; margin-bottom: 15px;">
            <label style="margin-right: 160px;">Email</label>
            <input type="email" asp-for="Email" style="background-color: black; color: blue; height: 30px; width: 300px; margin-top: 15px;" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div style="margin-top: 10px; margin-left: 40px; margin-bottom: 10px; margin-right: 475px; margin-top: 10px;">
            <label style="margin-right: 180px;">Password</label>
            <input type="password" asp-for="Password" style="background-color: black; color: blue; height: 30px; width: 300px; margin-top: 15px;" placeholder="Password " />
            <span asp-validation-for="Password" class="text-danger"></span>

        </div>
    </form>
    <div style="margin: 10%;">
        <button type="submit" style="color: blue; background-color: black; text-align: center; height: 7%; width: 100%; margin-right: 10px; margin-bottom: 10px;">
            Create
        </button>
        <br>
        <a style="color: black;" href="login">Login</a>
    </div>
</div>
